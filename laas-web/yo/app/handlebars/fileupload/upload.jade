.ui.centered.grid
    .twelve.wide.column
        .ui.green.segment(style="margin-top:5px;padding:20px 40px;")
            .ui.grid
                .row
                    .four.wide.column
                            .field
                                label File Type
                                select.ui.dropdown(id="selectedType", name="selectedType")
                                    option(value="aaaaa") aaaaaaaaaa
                                    |{{#each fileTypes}}
                                    option(value="{{id}}") {{type}}
                                    |{{/each}}
                .row
                    .four.wide.column
                        .field
                            label Job Description
                            textarea(type="text",rows="3",name="description",placeholder="description") {{description}}
                .row
                    .four.wide.column
                        .ui.teal.fluid.left.labeled.icon.button#attaching Attaching Files&nbsp;&nbsp;....
                            i.attach.icon
                    .four.wide.column
                        .ui.teal.fluid.left.labeled.icon.button#upload Upload
                            i.cloud.upload.icon
                    .four.wide.column
                        .ui.teal.fluid.left.labeled.icon.button#upload_cancel Cancel
                            i.reply.icon
                .row
                    .eight.wide.column
                        form(action="/upload",method="post",enctype="multipart/form-data")
                .row
                    .eight.wide.column
                        .ui.divided.list
                .row
                    .eight.wide.column
                        #progress.ui.teal.large.progress(style="margin-top:20px;",data-percent="0")
                            .bar
                            .label uploading files

