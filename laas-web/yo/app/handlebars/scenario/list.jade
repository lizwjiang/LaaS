.ui.grid
    .ui.centered.fourteen.wide.column
        table.ui.striped.table
            thead
                tr
                    th Scenario ID
                    th Scenario Name
                    th Scenario Description
                    th Action
            tbody
                |{{#each scenarios}}
                tr
                    td {{id}}
                    td {{name}}
                    td {{description}}
                    td
                        button.ui.teal.button.scenario-show(id="{{id}}")(data-id="{{id}}") Detail
                |{{/each}}