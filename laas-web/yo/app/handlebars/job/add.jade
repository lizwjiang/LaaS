.ui.centered.grid
    .twelve.wide.column
        .ui.green.segment(style="margin-top:5px;padding:20px 40px;")
            h2#title New Job
            form.ui.form
                .two.fields
                    .field
                        label Job Name
                        input(type="text",name="name",placeholder="name", value="{{name}}")
                    .field
                        label Job Scenario
                        select.ui.dropdown(id="selectedScenario", name="selectedScenario")
                            option(value="{{selectedid}}") {{selectedname}}
                            |{{#each scenarioList}}
                            option(value="{{id}}") {{name}}
                            |{{/each}}
                .field
                    label Job Description
                    textarea(type="text",rows="3",name="description",placeholder="description") {{description}}
                #parameters
                .field
                .two.fields
                    .field
                        .four.fields
                            .field
                                label Files
                            .field
                                #add.symbol
                                    i.green.plus.icon(style="cursor: pointer;transform:scale(1.5);")#add_file
                            .field
                    .field
                        //<i id="add_file" class="plus icon"></i>
                        //.ui.teal.large.fluid.button#add_file <i class="plus icon"></i>
                .field
                    .ui.divided.list
                        |{{#each files}}
                        div(id="fileitem_{{id}}")
                            .item
                                .content
                                    .ui.grid
                                        .ui.two.column.row(style="margin-top:10px;margin-bottom:10px;")
                                            .column
                                                label {{originalName}}
                                            .column.right.aligned
                                                //<div id="remove_file" class="ui teal large fluid button" value="{{id}}"><i class="minus icon"></i></div>
                                                #remove.symbol
                                                    i.green.minus.icon(style="cursor: pointer;transform:scale(1.5);",value="{{id}}")#remove_file
                        |{{/each}}
                .two.fields(style="margin-top:100px;margin-bottom:70px;")
                    .field(style="padding-right:50px;")
                         .ui.teal.fluid.button#job_save Save
                    .field(style="padding-left:50px;")
                         .ui.teal.fluid.button#job_run Save & Run
